CC = @CC@
CFLAGS = @CFLAGS@
CPPFALGS = @CPPFLAGS@
LDFLAGS = @LDFLAGS@

RST2MAN = @RST2MAN@

.PHONY: all
all: hungrycat

.PHONY: test
test: hungrycat
	python tests.py

.PHONY: clean
clean:
	rm -f hungrycat hungrycat.o

.PHONY: distclean
distclean:
	rm -f config.log config.status config.h

hungrycat: hungrycat.o
hungrycat.o: hungrycat.c config.h

ifneq "$(RST2MAN)" ""

all: doc

.PHONY: doc
doc: doc/manpage.1

%.1: %.rst
	@RST2MAN@ $(<) $(@)

endif

